<!DOCTYPE html>
<html>
  <%- include("./partials/head.ejs")%>
  <body>
    <%- include("./partials/navbar.ejs")%>
    <form id = "submit-form" style = "margin-top: 50px" action = "/log-in" method = "POST">
        <h1>Log in to OnlyFriends</h1>
        <img id = "submit-form-avatar" src = "/images/door.svg" alt = "door"/>
        <div class = "input-field-signup">
            <input id = "username" 
                name = "username"
                type= "text"
                placeholder = "username"
            required>
            <input id = "password" 
                name = "password"
                placeholder = "password"
                type = "password"
            required></input>
              <%if(messages.error){%>
                <p id = "err-msg-login"><%=messages.error%></p>
              <%}%>
            <button type = "submit">Log in</button>
    </from>
    <%- include("./partials/footer.ejs")%>
  </body>
</html>