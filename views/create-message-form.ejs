<!DOCTYPE html>
<html>
  <%- include("./partials/head.ejs")%>
  <body>
    <%- include("./partials/navbar.ejs")%>
    <form id = "submit-form" action = "/create-message" method = "POST">
        <h1>Create a Message</h1>
        <img id = "submit-form-avatar" src = "/images/<%=user.avatar%>.svg" alt = "alien"/>
        <%if(user.member){%>
          <div class = "input-field">
            <input id = "create-message-title" 
                name = "title"
                type= "text"
                placeholder = "Enter a title"
            >
            <textarea id = "create-message-body" 
                name = "message"
                placeholder = "Enter a message"
            ></textarea>
            <%if(errors.length > 0){%>
              <%errors.map(error => {%>
                <p id = "err-msg-create-msg"><%=error.msg%></p>
              <%})%>
              <%}%>
            <button type = "submit">Send Message</button>
        </div>
        <%} else{%>
          <p style = "color:rgb(212, 179, 28)">To create messages, you need to be a <a href = "/become-member" style = "text-decoration: none; color:#fff">Member</a>!</p>
        <%}%>
    </from>
    <%- include("./partials/footer.ejs")%>
  </body>
</html>